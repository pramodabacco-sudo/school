generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StaffRole {
  SUPER_ADMIN
  ADMIN
  TEACHER
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  role      StaffRole
  createdAt DateTime  @default(now())
}

model Student {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Parent {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}
